@if (User.Identity!.Name != null)
{
    <ul class="navbar-nav ms-auto">
        <li class="nav-item">
            <a asp-controller="Home" asp-action="Index" class="nav-link">Welcome, @User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <form asp-controller="Accounts" asp-action="Logout" method="post">
                <input type="submit" class="btn btn-link nav-link" value="Sign Out" />
            </form>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav ms-auto">
        <li class="nav-item">
            <a asp-controller="" asp-action="" class="nav-link">Register</a>
        </li>
        <li class="nav-item">
            <a asp-controller="Accounts" asp-action="Login" class="nav-link">Login</a>
        </li>
    </ul>
}